<div class="flex flex-col mb-8">
    <%= label @form, @field, @text, class: "flex-wrap mt-0.5 text-title6 font-title6 mb-2" %>
    <%= textarea @form, @field, class: "text-grey1 text-bodymedium font-body pl-3 pt-2 w-full border-2 border-solid border-grey3 focus:outline-none focus:border-primary rounded #{@height}"  %>
    <span class="text-warning font-caption mt-1"><%= error_tag @form, @field %></span>
</div>
