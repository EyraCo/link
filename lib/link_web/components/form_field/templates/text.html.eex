<div class="flex flex-col mb-8">
    <%= label @form, @field, @text, class: "flex-wrap mt-0.5 font-bold text-title6 mb-2" %>
    <%= text_input @form, @field, class: "text-grey1 text-bodymedium font-normal pl-3 w-full border-2 border-solid border-grey3 focus:outline-none focus:border-primary rounded h-44px" %>
    <span class="text-warning font-medium font-caption mt-1"><%= error_tag @form, @field %></span>
</div>
